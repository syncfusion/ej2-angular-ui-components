{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "lib": ["es2015", "dom"],
        "noImplicitAny": true,
        "skipLibCheck": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "./*.ts",
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "node_modules/@types"
    ],
    "files": [
        "src/index.ts"
    ],
    "angularCompilerOptions": {
        "genDir": "aot"
    }
}